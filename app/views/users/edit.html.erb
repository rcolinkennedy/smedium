<% provide(:title, 'Edit') %>
<!DOCTYPE html>
<html>
  <head>
    <title>smedium Edit User</title>
  </head>
  <body>
    <h1>Edit</h1>
    <p>
      <%= portrait_for(@user,'bigger') %>
      <h2>Signed in as <%= current_user.nickname %></h2>
    </p>
    <p>
      <h4>Update your email address</h4>
      <div>
          <%= form_for @user do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.text_field :email %>
          <%= f.submit "Update", :class => "button radius" %>
          <%= link_to "Home", root_path, :class => "button radius" %>
      </div>
		<% end %>
  </body>
  
<!-- Found at http://localhost:3000/users/<username>/edit -->