<% provide(:title, 'Settings') %>
<% provide(:hero_title, "Settings") %>
<% provide(:tagline, "Customize your experience") %>
<% provide(:header_image_url, 'http://24.media.tumblr.com/25a89be9a2a31bd0c97fafe17761e350/tumblr_mtax0twHix1st5lhmo1_1280.jpg') %>

<!DOCTYPE html>
<html>
  <body>
    <div class='page-content'>
      <% if current_user %>
        <%= portrait_for(@user,'bigger') %>
        <h2>Signed in as <%= current_user.nickname %></h2>
        <p>
          <h4>Update your email address</h4>
          <div>
            <%= form_for @user do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.text_field :email %>
            <%= f.submit "Update", :class => 'button radius' %>
            <%= link_to "Home", root_path, :class => 'button radius' %>
            <% end %>
          </div>
        </p>
      <% else %>
        <p>
          <h3>Log into your account or create one with Twitter</h3>
          <%= link_to "Sign in with Twitter", "/auth/twitter", :class => 'button radius' %>
        </p>
      <% end %>
    </div>
  </body>
  
<!-- Found at http://localhost:3000/me/settings -->