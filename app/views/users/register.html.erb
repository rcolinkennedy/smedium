<% provide(:title, 'Register') %>
<% provide(:hero_title, "Register") %>
<% provide(:tagline, "One last step") %>
<% provide(:header_image_url, 'http://25.media.tumblr.com/408fbfeae2d8590512b9fc9cc6207090/tumblr_mr807bH7hh1st5lhmo1_1280.jpg') %>

<!DOCTYPE html>
<html>
  <body>
    <div class='page-content'>
      <h3 class='subheader'>Welcome, <%= current_user.nickname %>  <%= portrait_for(current_user,'mini') %></h3>
    	<h4>Enter your email address below to finish registration.</h4>
      <div>
        <%= form_for @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.text_field :email %>
        <%= f.submit "Complete Registration", :class => 'button radius' %>
        <% end %>
      </div>
    </div>
  </body>

  <!-- Found at http://localhost:3000/<username>/register -->